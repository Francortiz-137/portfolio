---
import { Menu } from '@lucide/astro';

---

<header>
    <nav class="bg-gray-800 text-white p-4">
        <div class="flex justify-between items-center max-w-6xl mx-auto">
          <div class="text-xl font-bold">Franco Ortiz</div>
      
          <!-- Hamburguesa + input -->
          <div class="md:hidden relative">
            <input type="checkbox" id="menu-toggle" class="hidden peer absolute" />
      
            <!-- Iconos de Lucide -->
            <label for="menu-toggle" class="cursor-pointer flex items-center">
              <Menu/>
            </label>
      
            <!-- Links mobile -->
            <div class="hidden peer-checked:block absolute right-0 mt-2 w-40 bg-gray-800 rounded-lg shadow-lg p-4 space-y-3">
              <a href="/" class="block hover:text-yellow-400 transition">Home</a>
              <a href="/about" class="block hover:text-yellow-400 transition">About</a>
              <a href="/projects" class="block hover:text-yellow-400 transition">Projects</a>
              <a href="/skills" class="block hover:text-yellow-400 transition">Skills</a>
              <a href="/contact" class="block hover:text-yellow-400 transition">Contact</a>
            </div>
          </div>
      
          <!-- Links desktop -->
          <ul class="hidden md:flex space-x-8">
            <li><a href="/" class="hover:text-yellow-400 transition">Home</a></li>
            <li><a href="/about" class="hover:text-yellow-400 transition">About</a></li>
            <li><a href="/projects" class="hover:text-yellow-400 transition">Projects</a></li>
            <li><a href="/skills" class="hover:text-yellow-400 transition">Skills</a></li>
            <li><a href="/contact" class="hover:text-yellow-400 transition">Contact</a></li>
          </ul>
        </div>
      </nav>

</header>