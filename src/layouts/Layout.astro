---
import '../styles/global.css';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="es" class="scroll-smooth no-transition">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Franco Ortiz - Portfolio</title>
		<script>
			document.documentElement.classList.toggle(
			"dark",
			localStorage.theme === "dark" ||
				(!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches),
			);
		</script>
		
	</head>
	<body class="bg-l-background dark:bg-dark
				text-black dark:text-white transition-colors duration-300">
		<Header/>
		<main class="flex flex-col items-center justify-center mx-auto py-2">
			<slot />
		</main>
		<Footer/>
		<script>
			window.addEventListener('load', () => {
			document.documentElement.classList.remove('no-transition');
			});
		</script>
	</body>
	
</html>
